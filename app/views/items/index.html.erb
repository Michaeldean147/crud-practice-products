<% if notice %>
  <%= notice %>
<% end %>


<h1>Products</h1>

<%= link_to "Create A New Product", new_item_path %>

<table>
  <thead>
    <tr>
      <th>
        Name
      </th>
      <th>
        Description
      </th>
      <th>
        Price
      </th>
      <th>
        Created At
      </th>
      <th>
        Updated At
      </th>
    </tr>
  </thead>

    <tbody>
      <% @items.each do |item| %>
        <tr>
          <td>
            <%= link_to "#{item.name}", item %>
          </td>
          <td>
            <%= item.description %>
          </td>
          <td>
            <%= item.price %>
          </td>
          <td>
            <%= item.created_at %>
          </td>
          <td>
            <%= item.updated_at %>
          </td>
          <td>
            <%= link_to 'Edit', edit_item_path(item) %>
          </td>
          <td>
            <%= link_to 'Delete', item, method: :delete, data: {confirm: "Are You Sure?"}%>
          </td>
        </tr>
      <% end %>
    </tbody>

</table>
